<!DOCTYPE html>
<html>
<head>
  <title>BurningAirlines</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="airplane_background"><%= image_tag('', style: "background-size: cover") %></div>
  <h1>Burning Airlines</h1>
  <p><%= link_to "Home page", root_path %> | <%= link_to "Admin", airplanes_path %> | <%= link_to "New user", new_user_path %></p>
  <p>

    <p>Current User:
      <% if @current_user  %>
        <%= @current_user.name %>
      <% else %>
        <%= link_to "Click to enter user name", new_user_path %>
      <% end %>
    </p>

  <hr>
  <%= yield %>
  <script type="underscore/template" id="display-flight-heading-template">
    <tr>
      <th>Date</th>
      <th>Flight</th>
      <th>From > To</th>
      <th>Plane</th>
      <th>Capacity</th>
      <th>Remaning</th>
    </tr>
  </script>

  <script type="underscore/template" id="display-flight-view-template">
    <td><%%= date %></td>
    <td><%%= number %></td>
    <td><%%= origin %> to <%%= destination %></td>
    <td><%%= airplane.name %></td>
    <td><%%= capacity %></td>
    <td><%%= remaining %></td>
  </script>

</body>
</html>
